<UserControl x:Name="userControl" x:Class="Notes.NoteDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notes"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Rectangle Height="150" Width="150" Fill="#FFFFDB5B" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="LTitle" HorizontalAlignment="Left" Margin="4,4,0,0" VerticalAlignment="Top" Width="142" Height="26" Content="Title"/>
        <TextBlock x:Name="LContent" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipisici elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua." VerticalAlignment="Top" Height="111" Width="142"/>
        <Button x:Name="button" HorizontalAlignment="Left" Height="150" Margin="0,0,0,0" VerticalAlignment="Top" Width="150" MouseDoubleClick="Button_MouseDoubleClick" BorderThickness="0,0,0,0" Opacity="0"/>
    </Grid>
</UserControl>
