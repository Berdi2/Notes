<Window x:Class="Notes.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Button x:Name="BUpdate" Content="Check for Updates" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="BUpdate_Click"/>
        <TextBox x:Name="TBFontSize" HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="TBFontSize_PreviewTextInput"/>
        <Label x:Name="label" Content="Content Font Size" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BApply" Content="Apply" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Click="BApply_Click"/>
        <Label x:Name="label1" Content="Version: 1.8 Alpha 1" HorizontalAlignment="Left" Margin="116,7,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="CBIsAlpha" Content="Alpha Client" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
